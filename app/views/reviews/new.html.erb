<h1>Give us more reviews</h1>

<%= simple_form_for [@restaurant, @review] do |form| %>
  <div class="field">
    <%= form.input :content %>
  </div>

  <div class="field">
    <%= form.input :rating %>
  </div>

  <div class="actions">
    <%= form.submit "add a review", class: "btn btn-primary" %>
  </div>
  
<% end %>